<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/grayBackground"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/whatsappimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/whatsapp" />

    <EditText
        android:id="@+id/etemail"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/editbackground"
        android:ems="10"
        android:fontFamily="@font/adlam_display"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="5dp" />

    <EditText
        android:id="@+id/etpassword"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/editbackground"
        android:ems="10"
        android:fontFamily="@font/adlam_display"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="5dp" />

    <TextView
        android:id="@+id/clicksignup"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/adlam_display"
        android:gravity="right"
        android:text="Click For Sign Up" />

    <Button
        android:id="@+id/btn_signIn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/signupbutton"
        android:fontFamily="@font/adlam_display"
        android:padding="10dp"
        android:text="SIGN IN"
        android:textColor="#FAF5F5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_google"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/googlesignup"
            android:drawableLeft="@drawable/google"
            android:fontFamily="@font/adlam_display"
            android:padding="10dp"
            android:text="Google" />

        <Button
            android:id="@+id/btn_fb"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/facebooksignup"
            android:drawableLeft="@drawable/social"
            android:fontFamily="@font/adlam_display"
            android:padding="10dp"
            android:text="Facebook"
            android:textColor="#F0E9E9" />
    </LinearLayout>

    <TextView
        android:id="@+id/signinphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:fontFamily="@font/adlam_display"
        android:gravity="center"
        android:text="SignIn with Phone" />
</LinearLayout>